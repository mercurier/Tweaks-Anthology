          READ_BYTE  (link_off + 0x28 + (index * 0xd8)) target
          PATCH_IF (("%entrance_name%" STRING_COMPARE_CASE "" = 0) AND
                    (target = 2)) BEGIN // unnamed entrance point, east
            WRITE_ASCII (link_off + 0x04 + (index * 0xd8)) ~CDEastExit~
