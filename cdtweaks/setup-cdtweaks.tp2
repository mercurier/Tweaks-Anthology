    ~AR2100~ // KULDAHAR
    ~AR9100~ // LONELYWOOD
    BEGIN
    
    ACTION_IF FILE_EXISTS_IN_GAME ~%file%.bcs~ BEGIN
  
      COPY_EXISTING ~%file%.bcs~ ~override~
        DECOMPILE_AND_PATCH BEGIN
          APPEND_FILE ~cdtweaks/baf/reveal.baf~
