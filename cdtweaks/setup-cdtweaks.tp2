// PATCH_PRINT ~ == adding protection to %spell% on %SOURCE_RES%~
        LPF ADD_CRE_EFFECT INT_VAR opcode = 206 target = 1 timing = 1 STR_VAR resource = EVAL ~%spell%~ END 
      END
    END // bio check  
    BUT_ONLY

END      

