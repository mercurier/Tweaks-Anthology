      PATCH_IF (game_includes_pst = 1) BEGIN
        PATCH_IF ((~%SOURCE_RES%~ STRING_COMPARE_CASE ~annah~ = 0) OR
                  (~%SOURCE_RES%~ STRING_COMPARE_CASE ~morte~ = 0) OR
